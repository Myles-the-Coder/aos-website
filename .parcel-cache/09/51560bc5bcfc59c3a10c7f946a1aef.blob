@import url("https://fonts.googleapis.com/css2?family=Noto+Sans+JP:wght@500&display=swap");

* {
  box-sizing: border-box;
}

html {
  font-size: 62.5%;
}

body {
  font-family: "Noto Sans JP", sans-serif;
  margin: 0;
  display: flex;
  flex-direction: column;
  background-color: whitesmoke;
}

nav {
  position: fixed;
  top: 0;
  display: flex;
  align-items: flex-start;
  justify-content: flex-end;
  text-align: center;
  color: #fff;
  z-index: 100;
  background-color: rgba(0, 0, 0, .4);
  padding: 1rem;
  font-size: 1.2em;
  width: 100%;
}

nav a {
  text-decoration: none;
  color: #fff;
  padding: 0;
  margin: 0 1.5rem;
}

nav a:hover {
  color: #fff;
  text-decoration: underline;
  transition: transform 0.3s ease;
  transform: scale(1.8);
}

.title-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #fff;
  text-align: center;
  background-image: url('https://images.unsplash.com/photo-1535396253759-f556cac3c94a?ixid=MnwxMjA3fDB8MHxzZWFyY2h8MTd8fGRhcmslMjB3YXZlc3xlbnwwfHwwfHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=500&q=60');
  background-position: 50% 50%;
  background-repeat: no-repeat;
  background-size: cover;
  height: 500px;
  width: 100%;
}

.title-card h1 {
  margin: 3rem;
  font-size: 4em;
}

.title-card p{
  font-size: 1.4em;
  width: 300px;
}

.card-container {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 0;
}

.info-card {
  position: relative;
  background-color:#fff;
  z-index: 1;
  color: #000;
  box-shadow: rgba(100, 100, 111, 0.2) 0px 7px 29px 0px;
  border-radius: .5rem;
  text-align: center;
  width: 300px;
  padding: 3rem .5rem;
  margin: 1rem;
  transform: translateY(20%);
}

.info-card .bi {
  color: #fff;
  border-radius: 50%;
  padding: 1.4rem;
  font-size: 1.5em;
}

.bi-gear-fill {
  background-color: red;
}

.bi-lightning-fill {
  background-color: blue;
}

.bi-chat-right-text {
  background-color: green;
}

.info-card:nth-child(2) {
  transform: translateY(0%);
}

.info-card h4 {
  font-size: 2em;
  margin-top: 1rem;
}

.section-two {
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 1000px;
  padding: 0 1rem;
  background-color: lightslategray;
}

.section-two h1 {
  font-size: 3em;
}

.section-two p {
  width: 200px;
  font-size: 1.3em;
}

.image-container {
  border-radius: 5px;
  width: 200px;
  height: 300px;
  background-image: url('https://images.unsplash.com/photo-1596631133404-2f3948ed7ccc?ixid=MnwxMjA3fDB8MHx0b3BpYy1mZWVkfDJ8NnNNVmpUTFNrZVF8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=500&q=60');
}

.image-container::before {
  content: '';
  background-color: blue;
}
