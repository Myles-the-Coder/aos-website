@import url("https://fonts.googleapis.com/css2?family=Noto+Sans+JP:wght@500&display=swap");

* {
  box-sizing: border-box;
}

html {
  font-size: 62.5%;
}

body {
  font-family: "Noto Sans JP", sans-serif;
  margin: 0;
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: whitesmoke;
}

nav {
  position: fixed;
  top: 0;
  display: flex;
  align-items: flex-start;
  justify-content: flex-end;
  text-align: center;
  color: #fff;
  z-index: 100;
  background-color: rgba(0, 0, 0, .4);
  padding: 1rem;
  font-size: 1.2em;
  width: 100%;
}

nav a {
  text-decoration: none;
  color: #fff;
  padding: 0;
  margin: 0 1.5rem;
}

nav a:hover {
  color: #fff;
  text-decoration: underline;
  transition: transform 0.3s ease;
  transform: scale(1.8);
}

.title-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #fff;
  text-align: center;
  background-image: url('87d8dda95aaf5ff59c5c053cfd283ead');
  background-position: 50% 50%;
  background-repeat: no-repeat;
  background-size: cover;
  height: 500px;
  width: 100%;
}

.title-card h1 {
  margin: 3rem;
  font-size: 4em;
}

.card-container {
  display: flex;
  align-items: center;
  justify-content: center;
}

.info-card {
  background-color:#fff;
  color: #000;
  border-radius: .5rem;
  text-align: center;
  width: 300px;
  padding: 4rem 0;
  margin: 1rem;
}

