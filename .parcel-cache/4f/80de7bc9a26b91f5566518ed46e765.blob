@import url("https://fonts.googleapis.com/css2?family=Noto+Sans+JP:wght@500&display=swap");

* {
  box-sizing: border-box;
}

html {
  font-size: 62.5%;
}

body {
  font-family: "Noto Sans JP", sans-serif;
  margin: 0;
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: whitesmoke;
}

nav {
  position: fixed;
  top: 0;
  display: flex;
  align-items: flex-start;
  justify-content: flex-end;
  text-align: center;
  color: #fff;
  /* z-index: 100; */
  background-color: rgba(0, 0, 0, .4);
  padding: 1rem;
  font-size: 1.2em;
  width: 100%;
}

nav a {
  text-decoration: none;
  color: #fff;
  padding: 0;
  margin: 0 1.5rem;
}

nav a:hover {
  color: #fff;
  text-decoration: underline;
  transition: transform 0.3s ease;
  transform: scale(1.8);
}

.title-card {
  display: flex;
  flex-direction: column;
  position: absolute;
  align-items: center;
  justify-content: center;
  top: 0;
  left: 0;
  color: #fff;
  text-align: center;
  background-image: url('https://images.unsplash.com/photo-1535396253759-f556cac3c94a?ixid=MnwxMjA3fDB8MHxzZWFyY2h8MTd8fGRhcmslMjB3YXZlc3xlbnwwfHwwfHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=500&q=60');
  background-position: 50% 50%;
  background-repeat: no-repeat;
  background-size: cover;
  height: 500px;
  width: 100%;
}

.info-card {
  width: 400px;
  height: 100px;
  background-color: blue;
}
